<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Selenium-Cucumber-Suite"
       verbose="10"
       preserve-order="true"
       data-provider-thread-count="2"
       parallel="tests"> <!-- <- limit threads here -->

    <!-- listeners -->
    <listeners>
        <listener class-name="utils.RetryListener"/>
    </listeners>

    <test name="CucumberTests">
        <classes>
            <class name="runners.TestRunner"/>
        </classes>
    </test>
</suite>
